</div>

  <%if @message %>
  <p class = "message"> <%=@message%> </p>
  <% end %>


  <h3><input type="text" name="l1title" id="l1input" class = "inputbox"></input>
        <p id = "titletext" class="text-center">Things To Buy</p>
      <button id="titlecheck" class = "check-btn"></button>
</h3>
      <div id = "list-items" class = "list-items">
      <% for item in @items %>
      <table>
      <tr>
      <td>
        <input id="<%=item.id%>box" type="checkbox" onclick="checkItem(<%=item.id%>)"></input>
      </td>
      <td>
        <form class='buttonForm' action="/items/update/<%=item.id%>" method="post">
        <input id="<%=item.id%>qinput" type="number" name="quantity" class="quantitybox" placeholder="<%=item.quantity%>"></input>
        <span id = "<%=item.id%>qtext" class="quantity"><%=item.quantity%></span>
      </td>
      <td>
        <input id="<%=item.id%>input" type="text" name="itemtext" class ="inputbox" placeholder="<%=item.itemtext%>"></input>
        <span id="<%=item.id%>text"><%=item.itemtext%></span>
      </td>
      <td>
        <input type='submit' id="<%=item.id%>check" onclick="renameItem(<%=item.id%>)" value="" class="check-btn"></input>
        </form>
        <button id="<%=item.id%>edit" onclick="editItem(<%=item.id%>)" class = "edit-btn"></button>
        <form class='buttonForm' action="/items/delete/<%=item.id%>" method="post">
        <input type="submit" id="<%=item.id%>delete" value="" class="delete-btn"></input>
        </form>
      </td>
      </tr>
      </table>

      <% end %>

        <div id ="add-item" class ="add-item" >
        <form action="items/create" method="post">
        <input id="quantityinput" type="number" name="quantity" class="quantityboxADD" placeholder="#"></input>
        <input id="textinput" type="text" name="itemtext" class ="inputboxADD" placeholder="description"></input>
        <input type="submit" value="" class="check-btn-add"></input>
        </form>
        </div>
        <p class = "space"> &nbsp; </p>
        <span class = "list-edit-items">
        <button id = "add-item-btn" class="ui-btn" onclick="addBtn()">+ add item</button>
        <!-- <button class="ui-btn" onclick="editItem(title)">+ edit list</button> -->
        </span>
      </div>
